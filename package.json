{
  "name": "iron-mountain-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "only-allow pnpm",
    "next:dev": "next dev --experimental-next-config-strip-types",
    "next:build": "next build --experimental-next-config-strip-types",
    "next:build-check": "NEXT_TELEMETRY_DISABLED=1 next build --experimental-next-config-strip-types",
    "next:start": "next start --experimental-next-config-strip-types",
    "next:lint": "eslint . --no-cache --report-unused-disable-directives --max-warnings 0",
    "next:lint-fix": "eslint . --fix",
    "next:type-check": "next typegen && tsc --noEmit --incremental false",
    "next:format": "prettier . -c",
    "next:format-fix": "prettier . -w",
    "next:analyze": "ANALYZE=true pnpm next build --experimental-next-config-strip-types",
    "dev": "turbo run next:dev",
    "build": "turbo run next:build",
    "build-check": "turbo run next:build-check",
    "start": "turbo run next:start",
    "lint": "turbo run next:lint",
    "lint:fix": "turbo run next:lint-fix",
    "type-check": "turbo run next:type-check",
    "format": "turbo run next:format",
    "format:fix": "turbo run next:format-fix",
    "verify": "turbo run next:lint next:type-check next:format",
    "analyze": "turbo run next:analyze"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "flags": "^4.0.2",
    "framer-motion": "^12.24.10",
    "lucide-react": "^0.562.0",
    "mqtt": "^5.14.1",
    "next": "^16.0.10",
    "next-themes": "^0.4.6",
    "react": "^19.2.1",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.1",
    "react-to-print": "^3.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.4.0",
    "@next/bundle-analyzer": "^16.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^5.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-turbo": "^2.7.4",
    "globals": "^17.0.0",
    "only-allow": "^1.2.2",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.1",
    "tw-animate-css": "^1.4.0",
    "type-fest": "^5.3.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": "^22.0.0 || ^24.0.0",
    "pnpm": "10.23.0"
  },
  "browserslist": [
    "> 0.3%",
    "last 2 versions",
    "Safari >= 17",
    "ios_saf >= 17",
    "not dead"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "experimentalTernaries": false,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 120,
    "proseWrap": "always",
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "tailwindFunctions": [
      "clsx"
    ],
    "tailwindPreserveWhitespace": true,
    "tailwindStylesheet": "./src/app/globals.css",
    "trailingComma": "es5",
    "useTabs": false
  }
}
