{
  "name": "iron-mountain-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "analyze": "turbo run next:analyze",
    "build": "turbo run next:build",
    "build-check": "turbo run next:build-check",
    "dev": "turbo run next:dev",
    "format": "turbo run next:format",
    "format:fix": "turbo run next:format-fix",
    "lint": "pnpm run next:lint",
    "lint:fix": "pnpm run next:lint-fix",
    "next:analyze": "ANALYZE=true pnpm next build --experimental-next-config-strip-types",
    "next:build": "next build --experimental-next-config-strip-types",
    "next:build-check": "NEXT_TELEMETRY_DISABLED=1 next build --experimental-next-config-strip-types",
    "next:dev": "next dev --experimental-next-config-strip-types",
    "next:format": "prettier . -c",
    "next:format-fix": "prettier . -w",
    "next:lint": "eslint . --no-cache --report-unused-disable-directives --max-warnings 0",
    "next:lint-fix": "eslint . --fix",
    "next:start": "next start --experimental-next-config-strip-types",
    "next:types": "next typegen && tsc --noEmit",
    "preinstall": "only-allow pnpm",
    "start": "turbo run next:start"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^16.0.3",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "flags": "^4.0.2",
    "lucide-react": "^0.553.0",
    "mqtt": "^5.14.1",
    "next": "^16.0.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.66.0",
    "sonner": "^2.0.7",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.4.0",
    "type-fest": "^5.2.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.3.1",
    "@next/eslint-plugin-next": "^16.0.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-turbo": "^2.6.1",
    "globals": "^16.5.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "turbo": "^2.6.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "pnpm": "10.22.0",
    "node": ">=22"
  },
  "browserslist": [
    "> 0.3%",
    "last 2 versions",
    "Safari >= 17",
    "ios_saf >= 17",
    "not dead"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "experimentalTernaries": false,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 120,
    "proseWrap": "always",
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "tailwindFunctions": [
      "clsx"
    ],
    "tailwindPreserveWhitespace": true,
    "tailwindStylesheet": "./src/lib/tailwind/styles/globals.css",
    "trailingComma": "es5",
    "useTabs": false
  }
}
