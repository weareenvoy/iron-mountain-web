{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "analyze": {
      "env": ["ANALYZE"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build": {
      "env": [
        "NODE_ENV",
        "VERCEL_ENV",
        "API_AUTH_KEY",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_KIOSK_OFFLINE_FIRST",
        "NEXT_PUBLIC_CDN_HOST_NAME",
        "NEXT_PUBLIC_MQTT_BROKER_URL",
        "NEXT_PUBLIC_USE_GEC"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build-check": {
      "cache": false,
      "env": [
        "NODE_ENV",
        "VERCEL_ENV",
        "API_AUTH_KEY",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_KIOSK_OFFLINE_FIRST",
        "NEXT_PUBLIC_CDN_HOST_NAME",
        "NEXT_PUBLIC_MQTT_BROKER_URL",
        "NEXT_PUBLIC_USE_GEC"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "env": [
        "NODE_ENV",
        "VERCEL_ENV",
        "API_AUTH_KEY",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_KIOSK_OFFLINE_FIRST",
        "NEXT_PUBLIC_CDN_HOST_NAME",
        "NEXT_PUBLIC_MQTT_BROKER_URL",
        "NEXT_PUBLIC_USE_GEC"
      ],
      "persistent": true
    },
    "format": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "start": {
      "cache": false,
      "env": ["NODE_ENV", "VERCEL_ENV"],
      "persistent": true
    },
    "type-check": {
      "cache": false
    },
    "verify": {
      "cache": false
    },
    "next:analyze": {
      "env": ["ANALYZE"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "next:build": {
      "env": [
        "NODE_ENV",
        "VERCEL_ENV",
        "API_AUTH_KEY",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_KIOSK_OFFLINE_FIRST",
        "NEXT_PUBLIC_CDN_HOST_NAME",
        "NEXT_PUBLIC_MQTT_BROKER_URL",
        "NEXT_PUBLIC_USE_GEC"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "next:build-check": {
      "cache": false,
      "env": ["NODE_ENV", "VERCEL_ENV"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "next:dev": {
      "cache": false,
      "env": [
        "NODE_ENV",
        "VERCEL_ENV",
        "API_AUTH_KEY",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_KIOSK_OFFLINE_FIRST",
        "NEXT_PUBLIC_CDN_HOST_NAME",
        "NEXT_PUBLIC_MQTT_BROKER_URL",
        "NEXT_PUBLIC_USE_GEC"
      ],
      "persistent": true
    },
    "next:format": {
      "cache": false
    },
    "next:lint": {
      "cache": true
    },
    "next:start": {
      "cache": false,
      "env": ["NODE_ENV", "VERCEL_ENV"],
      "persistent": true
    },
    "next:type-check": {
      "cache": true
    }
  }
}