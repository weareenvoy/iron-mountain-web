{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "analyze": {
      "env": ["ANALYZE"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build": {
      "env": ["NODE_ENV", "VERCEL_ENV"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "env": ["NODE_ENV", "VERCEL_ENV"],
      "persistent": true
    },
    "format": {
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "start": {
      "cache": false,
      "env": ["NODE_ENV", "VERCEL_ENV"],
      "persistent": true
    },
    "types": {
      "cache": true
    }
  }
}
